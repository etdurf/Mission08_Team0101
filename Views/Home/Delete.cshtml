@{
    ViewData["Title"] = "Confirm Delete";
}
@model ToDoTask

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">Delete Task</h2>
                </div>
                <div class="card-body">
                    <p class="text-center lead mb-4">Are you sure you want to delete this task?</p>

                    <div class="row mb-3">
                        <div class="col-4 text-end fw-bold">Task Name:</div>
                        <div class="col-8">@Model.TaskName</div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-4 text-end fw-bold">Category:</div>
                        <div class="col-8">@Model.Category?.CategoryName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-4 text-end fw-bold">Due Date:</div>
                        <div class="col-8">@Model.DueDate?.ToString("MM/dd/yyyy")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-4 text-end fw-bold">Quadrant:</div>
                        <div class="col-8">@Model.Quadrant</div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <div class="row">
                            <div class="col-12 text-center">
                                <input type="hidden" asp-for="TaskId" />
                                <button type="submit" class="btn btn-danger me-2">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                                <a asp-action="Quadrants" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>